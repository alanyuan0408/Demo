div ng-app="myApp"  ng-init=""

	div ng-controller="myCtrl"
		button ng-click="product_json()" Get JSON

		div
			div ng-repeat="product in products"
        		h4 
                    |{{ product.name }}
        		p
                    b Price:
                    |{{ product.price }}

		br
		button ng-click="product_html()" Get HTML
        div ng-bind-html="expression | html"

javascript:
	var app = angular.module('myApp', []);
	app.controller('myCtrl', function($scope, $http, $sce) {

		$scope.products = [];
		$scope.expression = '';

	    $scope.product_json = function(){
	    	var httpRequest = $http({
                method: 'POST',
                url: '/request_product.json',
            	headers: {
              		'X-CSRF-Token': $('meta[name="csrf-token"]').attr('content')
            	}

        	}).success(function(data, status) {
            	$scope.products = data;
        	});
	    }

	    $scope.product_html = function(){
	    	var httpRequest = $http({
                method: 'POST',
                url: '/request_product.html',
            	headers: {
              		'X-CSRF-Token': $('meta[name="csrf-token"]').attr('content')
            	}
                
        	}).success(function(data, status) {
            	$scope.getHtml = function(html){
        			return $sce.trustAsHtml(html);
    			};

    			$scope.expression = data;

        	});
	    }

	});

	app.filter('html', function($sce) {
    	return function(val) {
        	return $sce.trustAsHtml(val);
    	};
	});
